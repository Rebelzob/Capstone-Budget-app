<article class="w-full h-full">
  <header class="flex items-center w-full gap-2 text-sm text-center p-4 bg-sky-600 text-white h-14">
    <a href="<%= categories_path %>" class="flex items-center gap-1">
      <i class="text-white text-md fa-solid fa-arrow-left"></i>
    </a>
    <h1 class="text-sm font-normal tracking-wider text-white uppercase pointer-events-none pl-20">New Category</h1>
  </header>
  <div>
    <%= form_for @category, url: categories_path, method: :post do |f| %>
      <fieldset>
         <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Name', class:'w-full border-x-transparent border-y  border-t-2   border-gray-200 outline-1 focus:border-transparent focus:ring-0', required: true %>
      </fieldset>
      <fieldset>
          <%= f.text_field :icon, autofocus: true, autocomplete: "icon", placeholder: 'Icon (URL)', class:'w-full border-x-transparent border-y  border-t-2 border-gray-200 outline-1 focus:border-transparent focus:ring-0', required: true %>
      </fieldset>
      <fieldset class="mt-5 text-center actions">
        <%= f.submit "Save", class: "bg-sky-600 p-2 text-sm w-full block text-white md:hover:bg-black md:hover:text-white md:transition tracking-wide text-center cursor-pointer" %>
      </fieldset>
    <% end %>
  </div>
</article>